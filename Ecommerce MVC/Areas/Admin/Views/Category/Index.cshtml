@using Bookoria.Models
@model List<Category>


<partial name="_Notification" />

    <div class="container">
        <div class="row pt-">
            <div class="col-6">

             <h2> Category List</h2>

            </div>
            <div class=" col-6 text-end">

                    <a asp-action="create" asp-controller="Category" class="btn btn-primary">

                <i class="bi bi-patch-plus-fill"></i>  Create New
                    </a>
                 

               
            </div>

        </div>
    </div>
<table class="table table-striped table-bordered ">
    <thead>
        <tr>
            <th >Category Name</th>
            <th>Display order</th>
        

        </tr>
    </thead>
    <tbody>

        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
         
            <td>@obj.Name </td>
            <td >@obj.DisplayOrder</td>
                <td>
                    <div class=" btn-group mb-1" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-1">

                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                    </div>
                    <div class=" btn-group mb-1 " role="group">

                        <a asp-controller="Category" class="btn btn-danger mx-1" asp-action="Delete" asp-route-id="@obj.Id">     <i class="bi bi-trash3"></i> Delete</a>




                    </div>
                </td>
     
        </tr>
        }
    </tbody>
</table>