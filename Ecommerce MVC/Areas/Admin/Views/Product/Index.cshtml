@using Bookoria.Models
@model List<Product>


<partial name="_Notification" />

    <div class="container">
        <div class="row pt-">
            <div class="col-6">

             <h2> Product List</h2>

            </div>
            <div class=" col-6 text-end mb-3">

                    <a asp-action="Upsert" asp-controller="Product" class="btn btn-primary">

                <i class="bi bi-patch-plus-fill"></i>  Create New
                    </a>
                 

               
            </div>

        </div>
    </div>
<table id="tbData" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th> <!-- عمود الأكشن الجديد -->
        </tr>
    </thead>
</table>


@section Scripts {
        <script src="~/js/Product.js"></script>
    }